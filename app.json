{
    "id": "com.chengputech",
    "name": {
        "en": "Cooltouch"
    },
    "version": "0.0.1",
    "compatibility": "1.x",
    "author": {
        "name": "Michael Orlov",
        "email": "miklergm@gmail.com"
    },
    "flow": {
      "triggers": [
        {
          "id": "3-gang_i0_on",
          "title": {
            "en": "Input 0 opened",
            "nl": "Ingang 0 geopend"
          },
          "args": [
            {
              "name": "device",
              "type": "device",
              "filter": "driver_id=3-gang"
            }
          ]
        },
        {
          "id": "3-gang_i0_off",
          "title": {
            "en": "Input 0 closed",
            "nl": "Ingang 0 gesloten"
          },
          "args": [
            {
              "name": "device",
              "type": "device",
              "filter": "driver_id=3-gang"
            }
          ]
        },
       {
          "id": "3-gang_i0_switch",
          "title": {
            "en": "Input 0 switched",
            "nl": "Ingang 0 geschakeld"
          },
          "args": [
            {
              "name": "device",
              "type": "device",
              "filter": "driver_id=3-gang"
           }
          ]
       },
       {
          "id": "3-gang_i1_on",
          "title": {
            "en": "Input 1 opened",
            "nl": "Ingang 1 geopend"
          },
          "args": [
            {
              "name": "device",
              "type": "device",
              "filter": "driver_id=3-gang"
            }
          ]
        },
        {
          "id": "3-gang_i1_off",
          "title": {
            "en": "Input 1 closed",
            "nl": "Ingang 1 gesloten"
          },
          "args": [
            {
              "name": "device",
              "type": "device",
              "filter": "driver_id=3-gang"
            }
          ]
        },
        {
          "id": "3-gang_i1_switch",
          "title": {
            "en": "Input 1 switched",
            "nl": "Ingang 1 geschakeld"
          },
          "args": [
            {
              "name": "device",
              "type": "device",
              "filter": "driver_id=3-gang"
           }
          ]
        },
        {
          "id": "3-gang_i2_on",
          "title": {
            "en": "Input 2 opened",
            "nl": "Ingang 2 geopend"
          },
          "args": [
            {
              "name": "device",
              "type": "device",
              "filter": "driver_id=3-gang"
            }
          ]
        },
        {
          "id": "3-gang_i2_off",
          "title": {
            "en": "Input 2 closed",
            "nl": "Ingang 2 gesloten"
          },
          "args": [
            {
              "name": "device",
              "type": "device",
              "filter": "driver_id=3-gang"
            }
          ]
        },
        {
          "id": "3-gang_i2_switch",
          "title": {
            "en": "Input 2 switched",
            "nl": "Ingang 2 geschakeld"
          },
          "args": [
            {
              "name": "device",
              "type": "device",
              "filter": "driver_id=3-gang"
           }
          ]
        },
        {
          "id": "3-gang_i3_on",
          "title": {
            "en": "Input 3 opened",
            "nl": "Ingang 3 geopend"
          },
          "args": [
            {
              "name": "device",
              "type": "device",
              "filter": "driver_id=3-gang"
            }
          ]
        },
        {
          "id": "3-gang_i3_off",
