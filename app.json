{
    "id": "com.chengputech",
    "name": {
        "en": "Cooltouch"
    },
    "version": "0.0.1",
    "compatibility": "1.x",
    "author": {
        "name": "Michael Orlov",
        "email": "miklergm@gmail.com"
    },
    "drivers": [{
        "id": "3-gang",
        "name": { "en": "Cooltouch Switch" },
        "class": "light",
        "capabilities": ["onoff", "onoff1", "onoff2", "onoff3"],

        "settings": [
          {
            "id": "poll_interval",
